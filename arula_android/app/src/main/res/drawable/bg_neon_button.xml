<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/neon_accent_soft" />
            <corners android:radius="20dp" />
            <stroke
                android:width="2dp"
                android:color="@color/neon_glow" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/neon_accent" />
            <corners android:radius="20dp" />
            <stroke
                android:width="1dp"
                android:color="@color/neon_glow" />
        </shape>
    </item>
</selector>