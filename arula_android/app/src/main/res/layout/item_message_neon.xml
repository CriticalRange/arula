<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/messageCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/neon_border"
    android:background="@color/neon_surface"
    style="@style/Widget.ArulaTerminal.NeonMessageCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <View
                android:id="@+id/senderIndicator"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@color/neon_accent"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/senderText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/neon_text"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/timestampText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/neon_muted"
                android:fontFamily="monospace" />

        </LinearLayout>

        <TextView
            android:id="@+id/messageText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/neon_text"
            android:lineSpacingMultiplier="1.4"
            android:layout_marginStart="20dp"
            android:fontFamily="sans-serif" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>