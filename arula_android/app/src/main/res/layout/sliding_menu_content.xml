<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menuContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neon_surface"
    android:elevation="8dp">

    <!-- Main Menu Container -->
    <LinearLayout
        android:id="@+id/mainMenuContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/neon_text"
            android:textSize="24sp"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="32dp" />

        <!-- Menu Items -->
        <com.arula.terminal.ui.canvas.TiltCardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:onClick="onConversationsClick">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_chat"
                    android:tint="@color/neon_accent"
                    android:layout_marginEnd="20dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Conversations"
                    android:textColor="@color/neon_text"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </com.arula.terminal.ui.canvas.TiltCardView>

        <com.arula.terminal.ui.canvas.TiltCardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:onClick="onSettingsClick">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_settings"
                    android:tint="@color/neon_accent"
                    android:layout_marginEnd="20dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Settings"
                    android:textColor="@color/neon_text"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </com.arula.terminal.ui.canvas.TiltCardView>

        <com.arula.terminal.ui.canvas.TiltCardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:onClick="onAboutClick">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_info"
                    android:tint="@color/neon_accent"
                    android:layout_marginEnd="20dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="About"
                    android:textColor="@color/neon_text"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </com.arula.terminal.ui.canvas.TiltCardView>

    </LinearLayout>

    <!-- Conversations Container -->
    <LinearLayout
        android:id="@+id/conversationsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="invisible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Conversations"
            android:textColor="@color/neon_text"
            android:textSize="24sp"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/conversationsList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- Settings Container -->
    <LinearLayout
        android:id="@+id/settingsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="invisible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="@color/neon_text"
            android:textSize="24sp"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="24dp" />

        <!-- Provider Settings -->
        <com.arula.terminal.ui.canvas.TiltCardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AI Provider"
                android:textColor="@color/neon_text"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp" />

        </com.arula.terminal.ui.canvas.TiltCardView>

        <!-- Model Settings -->
        <com.arula.terminal.ui.canvas.TiltCardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Model"
                android:textColor="@color/neon_text"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp" />

        </com.arula.terminal.ui.canvas.TiltCardView>

        <!-- Appearance Settings -->
        <com.arula.terminal.ui.canvas.TiltCardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Living Background"
                android:textColor="@color/neon_text"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp" />

        </com.arula.terminal.ui.canvas.TiltCardView>

    </LinearLayout>

    <!-- About Container -->
    <LinearLayout
        android:id="@+id/aboutContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center"
        android:visibility="invisible">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_terminal"
            android:tint="@color/neon_accent"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arula Terminal"
            android:textColor="@color/neon_text"
            android:textSize="28sp"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0.0"
            android:textColor="@color/neon_muted"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autonomous AI command-line interface"
            android:textColor="@color/neon_text"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginBottom="32dp" />

    </LinearLayout>

</FrameLayout>