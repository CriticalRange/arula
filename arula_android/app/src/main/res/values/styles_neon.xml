<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Neon theme -->
    <style name="Theme.ArulaTerminal.Neon" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/neon_accent</item>
        <item name="colorPrimaryVariant">@color/neon_accent_soft</item>
        <item name="colorSecondary">@color/neon_accent_soft</item>
        <item name="android:colorBackground">@color/neon_background</item>
        <item name="colorSurface">@color/neon_surface</item>
        <item name="colorOnPrimary">@color/neon_text</item>
        <item name="colorOnBackground">@color/neon_text</item>
        <item name="colorOnSurface">@color/neon_text</item>
        <item name="android:textColorPrimary">@color/neon_text</item>
        <item name="android:textColorSecondary">@color/neon_muted</item>
        <item name="android:windowBackground">@color/neon_background</item>
        <item name="android:statusBarColor">@color/neon_background</item>
        <item name="android:navigationBarColor">@color/neon_background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <!-- Neon Card Style -->
    <style name="Widget.ArulaTerminal.NeonCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/neon_accent</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardBackgroundColor">@color/neon_surface</item>
    </style>

    <!-- Neon Message Card -->
    <style name="Widget.ArulaTerminal.NeonMessageCard" parent="Widget.ArulaTerminal.NeonCard">
        <item name="cardCornerRadius">24dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- Neon Input Field -->
    <style name="Widget.ArulaTerminal.NeonInput" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/neon_text</item>
        <item name="android:textColorHint">@color/neon_muted</item>
        <item name="boxStrokeColor">@color/neon_accent</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="android:background">@drawable/bg_neon_input</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Neon Button -->
    <style name="Widget.ArulaTerminal.NeonButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/neon_text</item>
        <item name="backgroundTint">@color/neon_accent</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:elevation">0dp</item>
        <item name="rippleColor">@color/neon_accent_soft</item>
        <item name="strokeColor">@color/neon_glow</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Neon Toolbar -->
    <style name="Widget.ArulaTerminal.NeonToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/neon_surface</item>
        <item name="titleTextColor">@color/neon_text</item>
        <item name="android:elevation">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <!-- Neon Typography -->
    <style name="TextAppearance.ArulaTerminal.NeonTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/neon_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.ArulaTerminal.NeonMessage" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/neon_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="TextAppearance.ArulaTerminal.NeonCaption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/neon_muted</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>